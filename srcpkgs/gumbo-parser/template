# Template file for 'gumbo-parser'
pkgname=gumbo-parser
version=0.13.2
revision=1
build_style=meson
hostmakedepends="pkg-config"
makedepends="gtest-devel"
short_desc="HTML5 parsing library in pure C99"
maintainer="Orphaned <orphan@voidlinux.org>"
license="Apache-2.0"
homepage="https://codeberg.org/gumbo-parser/gumbo-parser/"
distfiles="https://github.com/google/gumbo-parser/archive/v${version}.tar.gz>${pkgname}-${version}.tar.gz"
distfiles="https://codeberg.org/gumbo-parser/gumbo-parser/archive/${version}.tar.gz"
checksum=dbdc159dc8e5c6f3f254e50bce689dd9e439064ff06c165d5653410a5714ab66

CFLAGS="-fPIC"

gumbo-parser-devel_package() {
	short_desc+=" - development files"
	depends="${sourcepkg}>=${version}_${revision}"
	pkg_install() {
		vmove usr/include
		vmove usr/lib/pkgconfig
		vmove "usr/lib/*.a"
		vmove "usr/lib/*.so"
	}
}
